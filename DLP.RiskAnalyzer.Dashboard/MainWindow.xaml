<Window x:Class="DLP.RiskAnalyzer.Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Forcepoint DLP Risk Adaptive Protection" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                  Background="{DynamicResource PrimaryHueDarkBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Forcepoint RAP" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Dashboard" Margin="8,0" 
                            Click="DashboardButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                    <Button Content="Investigation" Margin="8,0"
                            Click="InvestigationButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <TabControl x:Name="MainTabControl">
                <TabItem Header="Dashboard">
                    <ScrollViewer>
                        <StackPanel Margin="16">
                            <!-- Summary Cards -->
                            <UniformGrid Columns="4" Margin="0,0,0,16">
                                <materialDesign:Card Margin="8">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Total Incidents" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                        <TextBlock x:Name="TotalIncidentsText" Text="0" 
                                                   FontSize="32" FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </StackPanel>
                                </materialDesign:Card>
                                
                                <materialDesign:Card Margin="8">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="High Risk" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                        <TextBlock x:Name="HighRiskText" Text="0" 
                                                   FontSize="32" FontWeight="Bold"
                                                   Foreground="Red"/>
                                    </StackPanel>
                                </materialDesign:Card>
                                
                                <materialDesign:Card Margin="8">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Avg Risk Score" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                        <TextBlock x:Name="AvgRiskScoreText" Text="0" 
                                                   FontSize="32" FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </StackPanel>
                                </materialDesign:Card>
                                
                                <materialDesign:Card Margin="8">
                                    <StackPanel Margin="16">
                                        <TextBlock Text="Unique Users" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                        <TextBlock x:Name="UniqueUsersText" Text="0" 
                                                   FontSize="32" FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </UniformGrid>

                            <!-- Risk Timeline Chart -->
                            <materialDesign:Card Margin="8,0">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Risk Timeline (30 Days)" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               Margin="0,0,0,16"/>
                                    <!-- Chart will be added here -->
                                    <Border Height="300" Background="LightGray"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Incidents Table -->
                            <materialDesign:Card Margin="8,16,8,0">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Recent Incidents" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               Margin="0,0,0,16"/>
                                    <DataGrid x:Name="IncidentsDataGrid" 
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              Height="300">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="User" Binding="{Binding UserEmail}" Width="200"/>
                                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="150"/>
                                            <DataGridTextColumn Header="Risk Score" Binding="{Binding RiskScore}" Width="100"/>
                                            <DataGridTextColumn Header="Risk Level" Binding="{Binding RiskLevel}" Width="100"/>
                                            <DataGridTextColumn Header="Channel" Binding="{Binding Channel}" Width="100"/>
                                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Investigation">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>

                        <!-- Users List -->
                        <materialDesign:Card Grid.Column="0" Margin="8">
                            <StackPanel Margin="16">
                                <TextBlock Text="Users" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                                <ListBox x:Name="UsersListBox" 
                                         SelectionChanged="UsersListBox_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding UserEmail}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding RiskScore, StringFormat='Risk: {0}'}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Timeline -->
                        <materialDesign:Card Grid.Column="1" Margin="8">
                            <StackPanel Margin="16">
                                <TextBlock Text="Timeline" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                                <ListBox x:Name="TimelineListBox">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,8">
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Policy}"/>
                                                <TextBlock Text="{Binding Channel}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Alert Details -->
                        <materialDesign:Card Grid.Column="2" Margin="8">
                            <StackPanel Margin="16">
                                <TextBlock Text="Alert Details" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                                <TextBlock x:Name="AlertDetailsText" TextWrapping="Wrap"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>

