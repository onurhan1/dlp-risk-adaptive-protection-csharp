<Window x:Class="DLP.RiskAnalyzer.Dashboard.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Login - Forcepoint DLP Risk Adaptive Protection" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <materialDesign:Card Margin="32" Padding="32">
            <StackPanel>
                <!-- Logo/Title -->
                <StackPanel Margin="0,0,0,32" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ShieldLock" 
                                           Width="64" Height="64" 
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           Margin="0,0,0,16"/>
                    <TextBlock Text="Forcepoint DLP" 
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                    <TextBlock Text="Risk Adaptive Protection" 
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Username Field -->
                <Grid Margin="0,0,0,16">
                    <TextBox x:Name="UsernameTextBox"
                             materialDesign:HintAssist.Hint="Username"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="16"
                             Padding="12,16,40,16"/>
                    <materialDesign:PackIcon Kind="Account" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,12,0"
                                           Foreground="Gray"/>
                </Grid>

                <!-- Password Field -->
                <Grid Margin="0,0,0,24">
                    <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="Password"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 FontSize="16"
                                 Padding="12,16,40,16"
                                 KeyDown="PasswordBox_KeyDown"/>
                    <materialDesign:PackIcon Kind="Lock" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,12,0"
                                           Foreground="Gray"/>
                </Grid>

                <!-- Error Message -->
                <TextBlock x:Name="ErrorMessageText"
                           TextWrapping="Wrap"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,0,0,16"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"/>

                <!-- Login Button -->
                <Button Content="LOGIN"
                        x:Name="LoginButton"
                        Click="LoginButton_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="48"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="0,0,0,16"
                        IsDefault="True"/>

                <!-- Remember Me / Forgot Password -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox x:Name="RememberMeCheckBox" 
                              Content="Remember me"
                              Margin="0,0,16,0"
                              VerticalAlignment="Center"/>
                    <Button Content="Forgot Password?"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            FontSize="12"
                            Padding="8,4"
                            Click="ForgotPasswordButton_Click"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>

